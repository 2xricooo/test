        <div class="loading-text">Searching databases, please wait...</div>
    </div>

    <!-- Hidden form for submitting to response.php -->
    <form id="response-form" action="response.php" method="POST" style="display: none;">
        <input type="hidden" name="response_data" id="response-data">
        <input type="hidden" name="search_type" id="search-type">
        <input type="hidden" name="search_query" id="search-query">
    </form>

    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
        // Global variables
        let selectedPlan = '';
        let selectedPaymentMethod = '';

        // Modal functionality
        const overlay = document.getElementById('overlay');
        const modals = document.querySelectorAll('.modal');
        const closeButtons = document.querySelectorAll('.modal-close');

        // Function to open a specific modal
        function openModal(modalId) {
            const modal = document.getElementById(modalId);
            overlay.style.display = 'block';
            modal.style.display = 'block';
        }

        // Function to close all modals
        function closeAllModals() {
            overlay.style.display = 'none';
            modals.forEach(modal => {
                modal.style.display = 'none';
            });
            // Reset payment flow
            resetPaymentFlow();
        }

        // Function to reset payment flow
        function resetPaymentFlow() {
            document.getElementById('payment-selection').style.display = 'none';
            document.querySelectorAll('.payment-instructions').forEach(el => el.style.display = 'none');
            document.getElementById('payment-form').style.display = 'none';
            document.querySelectorAll('.payment-method').forEach(el => el.classList.remove('selected'));
            selectedPlan = '';
            selectedPaymentMethod = '';
        }

        // Function to show payment options
        function showPaymentOptions(plan) {
            selectedPlan = plan;
            document.getElementById('payment-selection').style.display = 'block';
            
            // Update amounts based on plan
            if (plan === 'monthly') {
                document.getElementById('paypal-amount').textContent = '€7.00 EUR';
                document.getElementById('paypal-note').textContent = 'API Access - Monthly Plan';
                document.getElementById('btc-amount').textContent = '€7.00';
                document.getElementById('eth-amount').textContent = '€7.00';
                document.getElementById('ltc-amount').textContent = '€7.00';
                document.getElementById('xmr-amount').textContent = '€7.00';
                document.getElementById('giftcard-amount').textContent = '€7.00 EUR';
                document.getElementById('plan-selected').value = 'Monthly Plan - €7.00';
            } else {
                document.getElementById('paypal-amount').textContent = '€50.00 EUR';
                document.getElementById('paypal-note').textContent = 'API Access - Lifetime Plan';
                document.getElementById('btc-amount').textContent = '€50.00';
                document.getElementById('eth-amount').textContent = '€50.00';
                document.getElementById('ltc-amount').textContent = '€50.00';
                document.getElementById('xmr-amount').textContent = '€50.00';
                document.getElementById('giftcard-amount').textContent = '€50.00 EUR';
                document.getElementById('plan-selected').value = 'Lifetime Plan - €50.00';
            }
        }

        // Function to select payment method
        function selectPaymentMethod(method) {
            selectedPaymentMethod = method;
            
            // Remove selected class from all payment methods
            document.querySelectorAll('.payment-method').forEach(el => el.classList.remove('selected'));
            
            // Add selected class to clicked payment method
            event.target.closest('.payment-method').classList.add('selected');
            
            // Hide all instructions
            document.querySelectorAll('.payment-instructions').forEach(el => el.style.display = 'none');
            
            // Show relevant instructions
            if (method === 'paypal') {
                document.getElementById('paypal-instructions').style.display = 'block';
            } else if (method === 'crypto') {
                document.getElementById('crypto-instructions').style.display = 'block';
            } else if (method === 'giftcard') {
                document.getElementById('giftcard-instructions').style.display = 'block';
            }
        }

        // Function to show payment form
        function showPaymentForm(paymentType) {
            document.getElementById('payment-form').style.display = 'block';
            
            // Show/hide gift card section based on payment type
            const giftCardSection = document.getElementById('gift-card-details');
            if (paymentType === 'giftcard') {
                giftCardSection.style.display = 'block';
                document.getElementById('gift-card-retailer').required = true;
            } else {
                giftCardSection.style.display = 'none';
                document.getElementById('gift-card-retailer').required = false;
            }

            // Set the payment method in the form
            const paymentMethodSelect = document.getElementById('payment-method-used');
            if (paymentType === 'paypal') {
                paymentMethodSelect.value = 'paypal';
            } else if (paymentType === 'crypto') {
                // Don't pre-select, let user choose specific crypto
            } else if (paymentType === 'giftcard') {
                // Don't pre-select, let user choose specific gift card type
            }

            // Scroll to form
            document.getElementById('payment-form').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Function to copy text to clipboard
        function copyToClipboard(element) {
            const text = element.textContent;
            navigator.clipboard.writeText(text).then(() => {
                // Show feedback
                const originalText = element.textContent;
                element.textContent = 'Copied!';
                element.style.backgroundColor = '#333';
                setTimeout(() => {
                    element.textContent = originalText;
                    element.style.backgroundColor = '#000';
                }, 1000);
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                const originalText = element.textContent;
                element.textContent = 'Copied!';
                element.style.backgroundColor = '#333';
                setTimeout(() => {
                    element.textContent = originalText;
                    element.style.backgroundColor = '#000';
                }, 1000);
            });
        }

        // Event listeners for buttons
        document.getElementById('info-button').addEventListener('click', () => openModal('info-modal'));
        document.getElementById('purchase-button').addEventListener('click', () => openModal('purchase-modal'));

        // Update the search button event listener to use the new response page
        document.getElementById('search-button').addEventListener('click', function() {
            const searchType = document.querySelector('.query-select').value;
            const searchQuery = document.querySelector('.search-input input').value.trim();
            
            // Validate input
            if (!searchType) {
                alert('Please select a search type');
                return;
            }
            
            if (!searchQuery) {
                alert('Please enter a search query');
                return;
            }
            
            // Show loading overlay
            document.getElementById('loading-overlay').style.display = 'flex';
            
            // Prepare the request
            const requestData = {
                field: [{ [searchType]: searchQuery }]
            };
            
            // Send the request to our API proxy
            fetch('api_proxy.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-API-Key': 'demo_key'
                },
                body: JSON.stringify(requestData)
            })
            .then(response => {
                // First get the raw text response
                return response.text().then(text => {
                    // If the response is empty
                    if (!text || text.trim() === '') {
                        throw new Error('Server returned an empty response. Check server logs for PHP errors.');
                    }
                    
                    try {
                        // Try to parse as JSON
                        const data = JSON.parse(text);
                        return { text: text, data: data, status: response.status };
                    } catch (e) {
                        // If JSON parsing fails, return the raw text
                        return { text: text, data: null, status: response.status };
                    }
                });
            })
            .then(result => {
                // Hide loading overlay
                document.getElementById('loading-overlay').style.display = 'none';
                
                // Set form values
                document.getElementById('response-data').value = result.text;
                document.getElementById('search-type').value = searchType;
                document.getElementById('search-query').value = searchQuery;
                
                // Submit the form to open the response page
                document.getElementById('response-form').submit();
            })
            .catch(error => {
                // Hide loading overlay
                document.getElementById('loading-overlay').style.display = 'none';
                
                // Set error message in form
                document.getElementById('response-data').value = JSON.stringify({ error: error.message });
                document.getElementById('search-type').value = searchType;
                document.getElementById('search-query').value = searchQuery;
                
                // Submit the form to open the response page with error
                document.getElementById('response-form').submit();
            });
        });

        // Footer links
        document.getElementById('updates-link').addEventListener('click', () => openModal('updates-modal'));
        document.getElementById('contact-link').addEventListener('click', () => openModal('contact-modal'));
        document.getElementById('removal-link').addEventListener('click', () => openModal('removal-modal'));

        // Data removal request button
        document.getElementById('request-removal-btn').addEventListener('click', function() {
            closeAllModals();
            openModal('contact-modal');
            // Pre-select "Data Removal Request" in the subject dropdown
            document.getElementById('subject').value = 'Data Removal Request';
        });

        // Close buttons
        closeButtons.forEach(button => {
            button.addEventListener('click', closeAllModals);
        });

        // Close by clicking overlay
        overlay.addEventListener('click', closeAllModals);

        // Payment form submission
        document.getElementById('payment-submission-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formStatus = document.getElementById('payment-form-status');
            formStatus.className = '';
            formStatus.style.display = 'none';
            
            const formData = new FormData(this);
            
            // Add selected plan and payment method to form data
            formData.append('selected_plan', selectedPlan);
            formData.append('selected_payment_method', selectedPaymentMethod);
            
            try {
                const response = await fetch('payment-webhook.php', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    formStatus.textContent = 'Your payment submission has been received! We will verify your payment and activate your API access within 2-6 hours. You will receive a confirmation email once processed.';
                    formStatus.className = 'api-success';
                    document.getElementById('payment-submission-form').reset();
                    
                    // Reset the payment flow after successful submission
                    setTimeout(() => {
                        resetPaymentFlow();
                    }, 3000);
                } else {
                    formStatus.textContent = result.message || 'There was an error submitting your payment information. Please try again or contact support.';
                    formStatus.className = 'api-error';
                }
            } catch (error) {
                formStatus.textContent = 'There was an error submitting your payment information. Please try again or contact support.';
                formStatus.className = 'api-error';
            }
            
            formStatus.style.display = 'block';
        });
    </script>

    <script>
        // Contact form handling
        document.addEventListener('DOMContentLoaded', function() {
            const contactForm = document.getElementById('contact-form');
            if (contactForm) {
                contactForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formStatus = document.getElementById('form-status');
                    formStatus.className = '';
                    formStatus.style.display = 'none';
                    
                    const formData = new FormData(this);
                    
                    try {
                        const response = await fetch('discord-webhook.php', {
                            method: 'POST',
                            body: formData
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            formStatus.textContent = 'Your message has been sent successfully!';
                            formStatus.className = 'success';
                            contactForm.reset();
                        } else {
                            formStatus.textContent = result.message || 'There was an error sending your message. Please try again.';
                            formStatus.className = 'error';
                        }
                    } catch (error) {
                        formStatus.textContent = 'There was an error sending your message. Please try again.';
                        formStatus.className = 'error';
                    }
                    
                    formStatus.style.display = 'block';
                });
            }
        });
    </script>

    <script>
        // Activation form handling
        document.addEventListener('DOMContentLoaded', function() {
            const activationForm = document.getElementById('activation-form');
            if (activationForm) {
                activationForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const activationStatus = document.getElementById('activation-status');
                    activationStatus.className = '';
                    activationStatus.style.display = 'none';
                    
                    const formData = new FormData(this);
                    
                    try {
                        const response = await fetch('activation.php', {
                            method: 'POST',
                            body: formData
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            activationStatus.textContent = 'Your activation key has been submitted successfully!';
                            activationStatus.className = 'success';
                            activationStatus.style.display = 'block';
                            activationForm.reset();
                        } else {
                            activationStatus.textContent = result.message || 'There was an error processing your activation key. Please try again.';
                            activationStatus.className = 'error';
                            activationStatus.style.display = 'block';
                        }
                    } catch (error) {
                        activationStatus.textContent = 'There was an error processing your activation key. Please try again.';
                        activationStatus.className = 'error';
                        activationStatus.style.display = 'block';
                    }
                });
            }
        });
    </script>
